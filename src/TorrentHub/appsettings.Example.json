{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "TorrentHub.Services.EmailService": "Debug",
            "TorrentHub.Services.TorrentCredentialService": "Debug",
            "TorrentHub.Services.Background.CredentialCleanupService": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Host=YOUR_HOST_IP;Database=TorrentHub;Username=YOUR_DB_USERNAME;Password=YOUR_DB_PASSWORD",
        "Garnet": "YOUR_HOST_IP:6379,password=YOUR_GARNET_PASSWORD"
    },
    "Jwt": {
        "Key": "your_super_secret_key_that_is_long_enough",
        "Issuer": "your_issuer",
        "Audience": "your_audience",
        "ExpirationMinutes": 60
    },
    "SmtpSettings": {
        "Host": "smtp.your-email.com",
        "Port": 587,
        "Username": "your-email@your-domain.com",
        "Password": "your-email-password",
        "EnableSsl": true,
        "FromAddress": "noreply@your-domain.com",
        "FromName": "TorrentHub"
    },
    "MeiliSearch": {
        "Url": "http://localhost:7700",
        "ApiKey": "SakuraMasterKeyPlaceholder"
    },
    "TMDbSettings": {
        "AccessToken": "YOUR_TMDB_ACCESS_TOKEN_HERE_STARTS_WITH_eyJ",
        "BaseUrl": "https://api.themoviedb.org/3/"
    },
    "DoubanSettings": {
        "PtgenBaseUrl": "https://slyw.me/ptgen.html"
    },
    "CredentialSettings": {
        "CleanupIntervalDays": 1
    },
    "StorageSettings": {
        "ServiceUrl": "https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com",
        "AccessKey": "YOUR_R2_ACCESS_KEY_ID",
        "SecretKey": "YOUR_R2_SECRET_ACCESS_KEY",
        "BucketName": "your-bucket-name",
        "PublicDomain": "https://pub-xxxxx.r2.dev",
        "Region": "auto",
        "ForcePathStyle": true,
        "MaxFileSize": 10485760,
        "AllowedImageExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
    },
    "SiteInfo": {
        "Name": "YourSiteName",
        "BaseUrl": "https://your-site-domain.com",
        "TorrentSource": "PT@YourSiteName"
    }
}